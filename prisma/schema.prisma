generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    String @id @default(uuid())
  nama  String
  email String @unique
}

model country {
  id          String    @id @default(uuid())
  code        String
  name        String
  continent   String
  population  String
  language_id String?
  language    Language? @relation(references: [id], fields: [language_id], onDelete: Cascade)
  city        City[]
  capital     String
}

model Language {
  id         String    @id @default(uuid())
  language   String
  isOfficial Boolean   @default(false)
  country    country[]
}

model City {
  id         String   @id @default(uuid())
  district   String
  population String
  country_id String?
  country    country? @relation(fields: [country_id], references: [id], onDelete: Cascade)
}
